{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build in the same folder (linux)",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",

        // debugging options
        "-ggdb",

        // optimization options
        // "-O2",
        // "-DNDEBUG",

        // Disable compiler extensions to ensure your programs (and coding practices) remain compliant with C++ standards and will work on any system.
        "-pedantic-errors",

        // Increasing your warning levels
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",

        // Enable “Treat warnings as errors”. This will force you to resolve all issues causing warnings.
        "-Werror",

        // language standard
        "-std=c++23",

        "${fileDirname}/**.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "/usr/bin/g++"
    }
  ],
  "version": "2.0.0"
}
